<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base config: Only allow HTTPS connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>

    <!-- Domain-specific configuration for our API -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">illiterate.moke.studio</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>

    <!-- Debug overrides: Allow localhost for development -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="user"/>
        </trust-anchors>
    </debug-overrides>
</network-security-config>
