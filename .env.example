# =============================================================================
# ileterate - Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment
# Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------

# Port for the API (default: 8000)
API_PORT=8000

# Debug mode - enables /docs and verbose logging (default: false)
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------

# LLM API endpoint (OpenAI-compatible)
# Examples:
#   OpenAI:       https://api.openai.com/v1/chat/completions
#   Local LLM:    http://localhost:1234/v1/chat/completions
#   Azure:        https://YOUR_RESOURCE.openai.azure.com/openai/deployments/YOUR_DEPLOYMENT/chat/completions
LLM_URL=http://localhost:1234/v1/chat/completions

# LLM model name
# Examples: gpt-4, gpt-3.5-turbo, local-model, mistral-7b
LLM_MODEL=gpt-4

# LLM API key (if required by your provider)
# Leave empty for local LLMs that don't require authentication
LLM_API_KEY=

# LLM parameters
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=60

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# API Key for authentication (leave empty to disable)
# Generate with: openssl rand -hex 32
API_KEY=

# End-to-end encryption (default: false)
# Requires RSA keys in ./keys directory
ENCRYPTION_ENABLED=false

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------

# Allowed origins for CORS
# Use ["*"] for development, restrict in production
# Example: ["https://yourdomain.com", "https://app.yourdomain.com"]
CORS_ORIGINS=["*"]

# -----------------------------------------------------------------------------
# LanguageTool Configuration (for development without Docker)
# -----------------------------------------------------------------------------

# Only needed if running LanguageTool separately
# In Docker, this is automatically configured
# LANGUAGETOOL_URL=http://localhost:8081/v2

# -----------------------------------------------------------------------------
# Resource Limits (Docker)
# -----------------------------------------------------------------------------

# LanguageTool JVM memory
LANGUAGETOOL_JAVA_XMS=512m
LANGUAGETOOL_JAVA_XMX=2g
LANGUAGETOOL_MEMORY_LIMIT=2G

# API memory limit
API_MEMORY_LIMIT=1G

# -----------------------------------------------------------------------------
# Processing Configuration
# -----------------------------------------------------------------------------

# Maximum text length for checking (characters)
MAX_TEXT_LENGTH=10000

# Chunk size for long texts (characters)
CHUNK_SIZE=1000

# Cache TTL in seconds
CACHE_TTL=300

# -----------------------------------------------------------------------------
# Rate Limiting (Production)
# -----------------------------------------------------------------------------

# Requests per window
RATE_LIMIT_REQUESTS=100

# Window size in seconds
RATE_LIMIT_WINDOW=60
